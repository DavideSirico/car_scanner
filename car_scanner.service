[Unit]
Description=Car Scanner
After=network.target bluetooth.target

[Service]
Type=simple
User=root
WorkingDirectory=/home/david/car_scanner
ExecStart=/home/david/car_scanner/.venv/bin/python /home/david/car_scanner/reader.py
ExecStartPost=/home/david/car_scanner/.venv/bin/python /home/david/car_scanner/sender.py
Restart=on-failure
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target